{% extends 'base.html.twig' %}

{% block title %}Departements index{% endblock %}

{% block body %}
    <h1>Departements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for departement in departements %}
            <tr>
                <td>{{ departement.id }}</td>
                <td>{{ departement.nom }}</td>
                <td>
                    <a href="{{ path('departements_show', {'id': departement.id}) }}">show</a>
                    <a href="{{ path('departements_edit', {'id': departement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('departements_new') }}">Create new</a>
{% endblock %}
